			Class.forName("com.mysql.jdbc.Driver");	
			
			conn = DriverManager.getConnection(url,id,pwd);
			
		} catch (ClassNotFoundException e) {	//동적으로 객체를 만들려는데 못찾는경우 날 수 있는 오류
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
		}
	}
	
